<h2>Editing Book</h2>
<% if @book.errors.any? %>
<div class= error>
    <h5><%= @book.errors.count %>errors prohibited this book from being saved:
    </h5>
  <ul>
            <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
            <% end %>
  </ul>
</div>
<% end %>


<%= form_with model: @book, url:book_path(@book), local:true do |f| %>
<div class= field>
    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Body</h4>
    <%= f.text_area :body %>
</div>

    <%= f.submit 'Update Book' %>

    <%= link_to "show", book_path(@book) %>

    <%= link_to "Back", books_path %>

<% end %>
